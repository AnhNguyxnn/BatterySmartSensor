# Battery Monitor Backend Environment Variables
# Copy this file to .env and set your values

# API Key for ESP32 authentication (REQUIRED in production)
# Generate a secure key: openssl rand -hex 32
BATTERY_API_KEY=your_secure_api_key_here

# Database configuration (optional)
# DATABASE_URL=sqlite:///./battery_monitor.db

# Server configuration (optional)
# HOST=0.0.0.0
# PORT=8000
# DEBUG=false

# Telegram notifications (optional but recommended)
# Create a bot via @BotFather and get the token
# Get your chat ID (for groups, use the group chat ID)
# If both variables are set, backend will send alerts automatically
# TELEGRAM_BOT_TOKEN=123456789:ABCDEF_your_bot_token
# TELEGRAM_CHAT_ID=123456789
